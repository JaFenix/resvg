{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/rendersvg.exe",
            "args": ["--dump-svg", "${workspaceFolder}\\..\\skiatests\\out.svg", "${workspaceFolder}\\..\\skiatests\\HAL9000_iconic_eye.svg", "${workspaceFolder}\\..\\skiatests\\out.png"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { 
                    "name": "Path",
                    "value": "${env:Path};${env:SKIA_LIB_DIR}" 
                }
            ],
            "externalConsole": true
        }
    ]
}